<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@id/main_page" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ToggleButton android:id="@id/toggle" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textOn="DISABLE" android:textOff="ENABLE" />
        <Button android:id="@id/boss" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="BOSS" />
        <Button android:id="@id/worker" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="WORKER" />
        <Button android:id="@id/control_panel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="CONTROL PANEL" />
        <Button android:id="@id/copy" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="COPY" />
        <Button android:id="@id/try_to_paste" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="TRY TO PASTE" />
        <Button android:id="@id/choose_file_to_edit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="CHOOSE FILE TO EDIT" />
        <Button android:id="@id/drag_panel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="DRAG PANEL" />
        <Button android:id="@id/drag_shadow" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="DRAG SHADOW" />
        <Button android:id="@id/notification_test" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="NOTIFICATION TEST" />
        <Button android:id="@id/debugger_manager" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="DEBUGGER MANAGER" />
        <Button android:id="@id/disconnect" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="DISCONNECT" />
        <Button android:id="@id/settings" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="SETTINGS" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="连接成功后通知勿扰" />
            <CheckBox android:id="@id/dnd_mode_auto" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>